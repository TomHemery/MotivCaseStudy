@page
@model MotivWebApp.Pages.Quote.QuoteFormModel

@{
    ViewData["Title"] = "QuoteForm";
}

<h1>QuoteForm</h1>

<h4>QuoteRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuoteRequest.FirstName" class="control-label"></label>
                <input asp-for="QuoteRequest.FirstName" class="form-control" />
                <span asp-validation-for="QuoteRequest.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteRequest.LastName" class="control-label"></label>
                <input asp-for="QuoteRequest.LastName" class="form-control" />
                <span asp-validation-for="QuoteRequest.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteRequest.EmailAddress" class="control-label"></label>
                <input asp-for="QuoteRequest.EmailAddress" class="form-control" />
                <span asp-validation-for="QuoteRequest.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteRequest.Topping" class="control-label"></label>
                <input asp-for="QuoteRequest.Topping" class="form-control" />
                <span asp-validation-for="QuoteRequest.Topping" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuoteRequest.Income" class="control-label"></label>
                <input asp-for="QuoteRequest.Income" class="form-control" />
                <span asp-validation-for="QuoteRequest.Income" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="QuoteRequest.ImpulseBuys" /> @Html.DisplayNameFor(model => model.QuoteRequest.ImpulseBuys)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="QuoteRequest.SillyHatSpend" class="control-label"></label>
                <input asp-for="QuoteRequest.SillyHatSpend" class="form-control" />
                <span asp-validation-for="QuoteRequest.SillyHatSpend" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
