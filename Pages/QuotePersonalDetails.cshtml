@page
@model QuotePersonalDetailsModel
@{
    ViewData["Title"] = "New quote";
}
<html>
    <head>
        <link rel="stylesheet", href="css/quote.css"/>
    </head>
    <body>
        <div class="text-center">
            <h1 class="display-4">Get a quote</h1><br/>
            <form>
                <fieldset>
                    <h2 class="formSectionHeading">First, tell us about you.</h2>
                    <div class="formRow">
                        <label class="formRowLabel">First Name:</label>
                        <input class="formRowColumn" type="text" id="fname" name="fname"/>
                    </div>
                    <div class="formRow">
                        <label class="formRowLabel">Last Name:</label>
                        <input class="formRowColumn" type="text" id="lname" name="lname"/>
                    </div>
                    <div class="formRow">
                        <label class="formRowLabel">Favourite Pizza Topping:</label>
                        <input class="formRowColumn" type="text" id="pname" name="pname"/>
                    </div>
                </fieldset>
                <fieldset>
                    <h2 class="formSectionHeading">Now we need to get serious.</h2>
                    <div class="formRow">
                        <label class="formRowLabel">Annual Income (in Emeralds):</label>
                        <input class="formRowColumn" type="number" min="1" step="any" id="income" name="income"/>
                    </div>
                    <div class="formRow">
                        <label class="formRowLabel">Do You Impulse Buy?</label>
                        <select class="formRowColumn" name="impulseBuys" id="impulseBuys" style="width:100%;">
                            <option value="yes">Yes</option>
                            <option value="no">No</option>
                        </select>
                    </div>
                    <div class="formRow">
                        <label class="formRowLabel">Monthly Silly Hat Expenditure:</label>
                        <input class="formRowColumn" type="number" min="1" step="any" id="sillyHatSpend" name="sillyHatSpend"/>
                    </div>
                </fieldset>
                <input class="submitButton" type="submit" value="Submit">
            </form>
        </div>
    </body>
</html>
